#ifndef RAM_H
#define RAM_H

#include "types.h"

#define PAGE_SIZE 0x1000
#define bank1_base 0x10000
#define bank2_base 0x18000

extern unsigned bank1_pages, bank2_pages;
extern int vram_pages, dram_pages, dram_layout_is_riscpc;

extern unsigned find_dram(byte *table, unsigned base);
extern void check_ram(void);
unsigned r2p(unsigned x);
unsigned p2r(unsigned x);

