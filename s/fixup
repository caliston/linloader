	AREA	FIXUP, CODE, READONLY

	EXPORT	lll_fixup_code_start
	EXPORT	lll_fixup_code_end

lll_fixup_code_start
	sub	r3, r3, #1
	adr	r4, lll_fixup_code_end
loop1	ldmia	r4!, {r5}
loop2	ldmia	r5!, {r6, r7}
	teq	r6, #0
	beq	start_kernel
loop3	ldmia	r6!, {r0, r8, r9, r10, r11, r12, r13, r14}
	stmia	r7!, {r0, r8, r9, r10, r11, r12, r13, r14}
	ldmia	r6!, {r0, r8, r9, r10, r11, r12, r13, r14}
	stmia	r7!, {r0, r8, r9, r10, r11, r12, r13, r14}
	tst	r6, r3
	bne	loop3
	tst	r5, r3
	bne	loop2
	b	loop1

start_kernel
	mov	r3, #0
	mov	r4, #0
	mov	r5, #0
	mov	r6, #0
	mov	r7, #0
	mov	r8, #0
	mov	r9, #0
	mov	r10, #0
	mov	r11, #0
	mov	r12, #0
	mov	r13, #0
	mov	r14, #0

	mov	r0, #0
	mov	pc, r2

	LTORG
lll_fixup_code_end

	END
