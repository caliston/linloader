dir <obey$dir>.^

echo Compling...
amu dist

echo Archiving llsrc-0/30/zip...
remove llsrc-0/30/zip
zip -r9D llsrc-0/30/zip README Docs o.asm o.mcid o.fixup c h s Makefile Distrib cat2html -x *CVS/*
zipnote -w llsrc-0/30/zip < Distrib.src

echo Archiving llbin-0/30/zip...
remove llbin-0/30/zip
zip -r9D llbin-0/30/zip Distrib.bin_README Linloader Docs -x Docs/source* *CVS/*
zipnote -w llbin-0/30/zip < Distrib.bin

|echo Archiving lllib-0/30/zip...
|remove lllib-0/30/zip
|zip -9 -r lllib-0/30/zip l Docs h.id_sys h.boot

echo Finished
